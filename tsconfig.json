{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./src", "./node_modules/@types"],
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noImplicitAny": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  